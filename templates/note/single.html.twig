{% extends 'base.html.twig' %}

{% block title %}
	{{ oneNote.title }}
{% endblock %}

{% block body %}
	<h1 class="text-white">{{ oneNote.title }}</h1>
	<p class="fs-4 text-white">{{ oneNote.description }}</p>

	<p class="text-white">Publié le :
		{{ oneNote.createdAt|date("d/m/Y") }}
		• Mis à jour le :
		{{ oneNote.updatedAt|date("d/m/Y") }}</p>

	<hr class="text-white">

	<div class="row pt-3 pb-3">
		<div class="card p-4 rounded-3">
			<p>{{ oneNote.content }}</p>
		</div>
	</div>

	<hr class="text-white">

	<div class="col-md-12 text-center">
		<a class="btn btn-warning" href={{ path('notes') }}>Revenir à toutes les notes</a>
		<a class="btn btn-primary" href={{ path('update_note', { id: oneNote.id} ) }}>Modifier la note</a>
	</div>

	{% include 'partials/_last-notes.html.twig' %}

{% endblock %}
